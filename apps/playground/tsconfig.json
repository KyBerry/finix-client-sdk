{
  "extends": "@kyberry/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@kyberry/ui/*": ["../../packages/ui/src/*"],
      "@kyberry/finix-client-sdk": ["../../packages/sdk/src"],
      "@kyberry/finix-client-sdk/*": ["../../packages/sdk/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "next.config.mjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
